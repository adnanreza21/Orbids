<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".kuis.ResultQuizActivity">

    <TextView
        android:id="@+id/txt22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/bluetext"
        android:text="Kuis"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt22">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt22"
                android:layout_marginTop="@dimen/_70sdp"
                android:gravity="center"
                android:text="Nilaimu : "
                android:textColor="@color/white"
                android:textSize="@dimen/_37sdp" />

            <TextView
                android:id="@+id/textKKM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt22"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="center"
                android:text="sss"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <Button
                android:id="@+id/but1"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textScore"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/custom_button_red"
                android:onClick="onClick"
                android:text="Try Again"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>